{
  "name": "recflag-admin",
  "description": "RecFlag Admin Page",
  "author": "Jeff Walker <jeff@walkerenvres.com>",
  "private": true,
  "scripts": {
    "watchify": "watchify -vd -t browserify-css -e src/main.js -o dist/build.js",
    "serve": "http-server -o -s -c 1 -a localhost",
    "dev": "npm-run-all --parallel watchify serve",
    "build": "cross-env NODE_ENV=production browserify -g envify -t browserify-css src/main.js | uglifyjs -c warnings=false -m > dist/build.js"
  },
  "dependencies": {
    "babel-preset-env": "^1.6.1",
    "bootstrap-vue": "^1.0.0-beta.9",
    "browserify-css": "^0.12.0",
    "vue": "^2.0.1",
    "vue-resource": "^1.3.4",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.6",
    "envify": "^3.4.1",
    "http-server": "^0.9.0",
    "npm-run-all": "^2.1.2",
    "uglify-js": "^2.5.0",
    "vueify": "^9.1.0",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify",
      "browserify-css"
    ]
  },
  "browserify-css": {
    "autoInject": true,
    "minify": true,
    "rootDir": "../"
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  }
}
